{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": [
        "controllers/*"
      ],
      "@entities/*": [
        "entity/*"
      ],
      "@migrations/*": [
        "migration/*"
      ],
      "@handlers/*": [
        "handlers/*"
      ],
      "@db/*": [
        "db/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/**"
  ]
}
